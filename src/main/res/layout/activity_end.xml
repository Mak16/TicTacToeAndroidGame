<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahi.tictactoe.end"
    android:id="@+id/end_layout"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:layout_height="40dp"
        android:id="@+id/winner_name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#9ef409"
        />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/celebrate"
        android:layout_below="@+id/winner_name"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:src="@drawable/celebrate"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/winner_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/play_again_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/replay"
            android:layout_weight="1.1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

        <Button
            android:id="@+id/home_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/home"
            android:layout_weight="1"
            android:padding="10dp"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/exit"
            android:layout_weight="1"
            style="@style/Base.Widget.AppCompat.Button"/>

    </LinearLayout>

</RelativeLayout>
